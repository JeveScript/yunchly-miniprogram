.container{
  position: relative;
  min-height: 100vh;
}
.nothing{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.nothing-title{
  font-size: 34rpx;
  color: #A9A9A9;
}
.nothing-desc{
  font-size: 35rpx;
  color: #D3D3D3;
}
.topic-item{
  padding: 40rpx 30rpx 20rpx 30rpx;
  border-bottom: 1rpx solid #DCDCDC;
}
.topic-title{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.3;
  margin-bottom: 40rpx;
}
.topic-content{
  display: block;
  font-size: 32rpx;
  color: #777;
  height: 150rpx;
  overflow: hidden;
  text-overflow:ellipsis;
}
.topic-user{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  height: 60rpx;
}
.user-avatar{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}
.user-handle{
  font-size: 28rpx;
  color: #999;
  flex: 1;
  display: flex;
}
.topic-follow{
  font-size: 28rpx;
  color: #999;
}
.topic-reply{
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}
.user-cancel{
  font-size: 24rpx;
  color: #555;
  padding: 15rpx;
}